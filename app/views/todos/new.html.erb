<h1> create a new Todo </h1>
<% if @todo.errors.any? %>
 <h2> The following errors prevented the todos to save </h2>
 <ul>
   <% @todo.errors.full_messages.each do |msg|%>
   <li>
     <%= msg %>
   </li>
   <%end%>
 </ul>
<% end %>
<%=form_for @todo do |f| %>
<p>
  <%= f.label :name%><br>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :description %><br>
  <%= f.text_area :description %>
  <p>
    <%= f.submit %>
  </p>
<% end %>
